@model assetsment_Celsia.Models.Client

<div class="card mt-4">
    <div class="card-body">
        <form asp-action="CreateUser" asp-controller="Clientes" method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" id="Name" name="Name">
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="mb-3">
                <label for="Address" class="form-label">Address</label>
                <input type="text" class="form-control" id="Address" name="Address">
                @Html.ValidationMessageFor(model => model.Address)
            </div>
            <div class="mb-3">
                <label for="Phone" class="form-label">Phone</label>
                <input type="text" class="form-control" id="Phone" name="Phone">
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="text" class="form-control" id="Email" name="Email">
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div>
                <button class="btn btn-primary ml-2" style="margin-top: 15px;">Create user</button>
                <a asp-action="Index" asp-controller="Clientes" class="btn btn-primary ml-2"
                    style="margin-top: 15px;">Return</a>
            </div>
        </form>
    </div>
</div>
